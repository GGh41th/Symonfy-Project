<style>
    .container {
        margin-left: 70px;
        display: flex;
        flex-direction: column;
        overflow-y: auto;
        overflow-x: hidden;
        width: 100%;
        height: 93vh;
        gap: 60px;
    }

    .users-container {
        display: flex;
        flex-direction: column;
        gap: 10px
    }

    .user-img {
        width: 80px;
        height: 80px;
        border-radius: 50%;
    }

    .user {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        width: 90%;
        margin: 0 10px 10px;
        padding: 10px;
        border: 1px solid #ccc;
        background-color: #444444;
        border-radius: 5px;

    }

    .search {

        width: 92%;
        padding: 6px;
        margin: 10px 0;
        border: 3px solid #ccc;
        border-radius: 5px;
        text-align: center;
        font-size: 40px;
        outline: none;
        background: transparent;
        color: white
    }

    .user-infos {
        display: flex;
        flex-direction: row;
        justify-content: space-around;
        align-items: center;
        width: 65%;


    }

    .text {
        font-size: 16px;
        font-weight: 400;
    }

    .extras {
        display: flex;
        flex-direction: row;
        justify-content: space-around;
        align-items: center;
        width: 35%;
    }

    .but {
        background-color: red;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
    }
</style>

<div class = "container">
    <input type = "text" class = "search" placeholder = "Type here to search">
    {% for user in users %}
        <div class = "users-container">
            <div class = "user" onclick = "visitUser('{{ user.id }}')" style = "cursor:pointer">
                <div class = "user-infos">
                    {% if user.image %}
                        <img src = "{{ asset('assets/profile_images/'~ user.image) }}" alt = "Placeholder Image"
                             class = "user-img">
                    {% else %}
                        <img src = "{{ asset('assets/home/assets/img/avatar.png') }}" alt = "Placeholder Image"
                             class = "user-img">
                    {% endif %}
                    <div class = "d-flex flex-column">
                        <h3 class = "text">{{ user.username }}</h3>
                        <h3 class = "text">{{ user.email }}</h3>
                        <h3 class = "text">{{ user.age }}</h3>
                    </div>
                </div>
                <div class = "extras">
                    {% if user.role == 'admin' %}
                        <h3 class = "text" style = "font-weight: bold;font-size: large">Admin
                            <ion-icon name = "shield-checkmark"></ion-icon>
                        </h3>
                    {% else %}
                        <h3 class = "text">{{ user.taskFinished }} out of {{ user.totalTasks }} tasks completed</h3>
                        <button class = "but" onclick = "deleteUser(' {{ user.id }}');">
                            <i class = "fas fa-trash"></i>
                        </button>
                    {% endif %}
                </div>
            </div>
        </div>
    {% endfor %}
</div>

<script>
    if (typeof usersPageAdmin === 'undefined') {
        var usersPageAdmin = true;
        function deleteUser(id) {
            if (confirm('Are you sure you want to delete this user?')) {
                $.ajax({
                    url: '/admin/userdelete',
                    type: 'POST',
                    data: {
                        id: id
                    },
                    success: function (response) {
                        if (response.status == 'success') {
                            navigateTo('users');
                        }
                    }
                });
            }
        }

        function visitUser(id) {
            $.ajax({
                    url: '/admin/visituser',
                    type: 'POST',
                    data: {
                        id: id
                    },
                    success: function (response) {
                        $(".content").html(response);
                        console.log(response)
                
                    }
                }
            )
            ;
        }
    }

</script>