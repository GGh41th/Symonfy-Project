<style>
    .container {
        margin-left: 70px;
        margin-top: 70px;
        flex-direction: column;
        justify-content: center;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        background-color: #333;
        color: #fff;
    }

    th {
        background-color: #222222;
        color: #fff;
        border: 1px solid #555;
        padding: 8px;
    }

    td {
        border: 1px solid #555;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #555;
    }

    td:nth-child(1) {
        text-align: left;
        font-weight: 600;
    }

    tr:hover {
        opacity: 0.7;
    }

    th,
    td {
        text-align: center;
        padding: 20px 10px;
    }
</style>

<div class = 'container'>

    <h1></h1>
    {% if feedbacks %}
        <table>
            <tr>
                <th>Submission text</th>
                <th>Username</th>
                <th>Email</th>
                <th>Date</th>
            </tr>
            {% for feedback in feedbacks %}

                <tr>
                    <td>{{ feedback.message }}</td>
                    <td>{{ feedback.user }}</td>
                    <td>{{ feedback.email }}</td>
                    <td>{{ feedback.creationDate | date("d-m-Y") }}</td>
                </tr>
            {% endfor %}
        </table>
    {% else %}
        <h1>No feedbacks yet</h1>
    {% endif %}

</div>
