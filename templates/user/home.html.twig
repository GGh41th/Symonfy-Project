<html>

<head>
    <title>Task Sphere: User</title>
    <link href = "https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel = "stylesheet">
    <link rel = "stylesheet" type = "text/css" href = "{{ asset('assets/globalstyle.css') }}">
    <link rel = "stylesheet" type = "text/css" href = "{{ asset('assets/home/css/styles_user.css') }}">
    <script src = "https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>

<body>
<div class = "navigation-panel">
    <div class = "nav-item profile">
        {% if(user.image) %}
            <img src = "{{ asset('assets/profile_images/' ~ user.image) }}" alt = "image">
        {% else %}
            <img src = "{{ asset('assets/home/assets/img/avatar.png') }}" alt = "image">
        {% endif %}
        <p>{{ user.username }}</p>
    </div>
    <div class = "nav-item" data-url = "user/main">
        <ion-icon name = "home"></ion-icon>
        <p>Home</p>
    </div>
    <div class = "nav-item" data-url = "user/tasks">
        <ion-icon name = "calendar"></ion-icon>
        <p>Tasks</p>
    </div>
    <div class = "nav-item" data-url = "user/profile">
        <ion-icon name = "person"></ion-icon>
        <p>Profile</p>
    </div>
    <div class = "nav-item" data-url = "user/stats">
        <ion-icon name = "analytics"></ion-icon>
        <p>Statistics</p>
    </div>
    <div class = "nav-item" data-url = "user/support">
        <ion-icon name = "headset"></ion-icon>
        <p>Support</p>
    </div>
    <div class = "nav-item logout" data-url = "user/logout_page" style = "border-top: 2px solid #303030;">
        <ion-icon name = "exit"></ion-icon>
        <p>Log out</p>
    </div>
    <div class = "indicator">
    </div>
</div>
<div id = "loading">
    <img src = "{{ asset('assets/home/assets/img/loading.png') }}" alt = "loading" id = "loading-spinner">
</div>
<div class = "content">
</div>
<script type = "module" src = "https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src = "https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
<script src = "{{ asset('assets/home/js/script_user.js') }}"></script>
<link href = "https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel = "stylesheet">

</body>

</html>